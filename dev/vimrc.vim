" Basic settings for tests
set mouse=a
set number
set cursorline
set expandtab
set shiftwidth=2
set softtabstop=-1
set signcolumn=yes
set completeopt=menuone,noselect
set ttimeoutlen=1
set autoindent

" Always show statusline.
set laststatus=2
set statusline=%<%f\ %m%r%y\ %LL\ %=\ 0x%-4.B\ %-16.(%lL,%cC%V,%oB%)\ %P

" Detect d2 without d2-vim
au BufNewFile,BufRead *.d2 setfiletype d2
